@model BuyOnline.Models.Order

@{
    ViewBag.Title = "PlaceOrder";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

<h2>PlaceOrder</h2>
<div id="middlediv">

    <form action="~/CustomerOrder/PlaceOrder" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <input type="hidden" name="TotalAmmount" value="@TempData["totalammount"]" />
        <input type="hidden" name="FinalAmmount" value="@TempData["finalammount"]" />
        <input type="hidden" name="Discount" value="@TempData["discount"]"/>
        <table align="center">
            <tr>
                <td>Final Ammount @TempData["finalammount"]</td>
            </tr>
            <tr>
                <td>Select Delivery Date</td>
                <td><input type="date" name="DeliveryDay" />@Html.ValidationMessageFor(model => model.DeliveryDay)</td>
            </tr>
            <tr>
                <td>Select Delivery Time</td>
                <td>
                    <select name="DeliveryTime">
                        <option value="9:00am-10:00am">9:00am-10:00am</option>
                        <option value="10:00am-11:00am">10:00am-11:00am</option>
                        <option value="11:00am-12:00am">11:00am-12:00am</option>
                        <option value="12:00am-1:00pm">12:00am-1:00pm</option>
                        <option value="1:00pm-2:00pm">1:00pm-2:00pm</option>
                        <option value="2:00pm-3:00pm">2:00pm-3:00pm</option>
                        <option value="3:00pm-4:00pm">3:00pm-4:00pm</option>
                        <option value="4:00pm-5:00pm">4:00pm-5:00pm</option>
                        <option value="5:00pm-6:00pm">5:00pm-6:00pm</option>
                        <option value="6:00pm-7:00pm">6:00pm-7:00pm</option>
                        <option value="7:00pm-8:00pm">7:00pm-8:00pm</option>
                        <option value="8:00pm-9:00pm">8:00pm-9:00pm</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center"><input type="submit" name="Submit" id="Submit" value="Place Order" /></td>
            </tr>
        </table>
    </form>
</div>

